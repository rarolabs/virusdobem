			<div class="ibox-content">
				<h2><%= @quantidade_buscas %> Palavras Buscadas</h2>
				<div class="row">
					<div class="col-lg-12">
						<div id="cloud_word" style="height: 400px;"></div>
					</div>
				</div>
			</div>
		</div>
	</div>
